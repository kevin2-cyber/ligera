<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ligera" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/emerald_dark_variant</item>
        <item name="colorPrimary">@color/emerald</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorTertiaryContainer">@color/emerald</item>
        <item name="colorError">@color/emerald</item>
        <item name="colorErrorContainer">@color/emerald</item>
        <item name="colorOnError">@color/emerald</item>
        <item name="colorOnErrorContainer">@color/emerald</item>

        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>


        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="buttonStyle">@style/Widget.App.Button.OutlinedButton.IconOnly</item>

        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>

    </style>

    <style name="Theme.Ligera" parent="Base.Theme.Ligera">
        <item name="android:fontFamily">@font/oneuisans</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

        <!--Container-->
        <item name="colorSurface">@android:color/transparent</item>
        <!--Inactive icon-->
        <item name="colorOnSurfaceVariant">@color/charcoal_gray</item>
        <!--Active icon-->
        <item name="colorOnSecondaryContainer">@color/charcoal_gray</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
<!--        <item name="android:paddingLeft">0dp</item>-->
<!--        <item name="android:paddingRight">0dp</item>-->
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <!-- Apply attributes here -->
        <item name="height">500dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>